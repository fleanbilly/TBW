<Window x:Class="TBW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="The British Way: Palestine" Height="800" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Game Board and Status -->
        <TextBox Name="boardTextBox" Grid.Row="1" Grid.Column="0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" />

        <!-- Current Card Display -->
        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Current Card" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBlock Name="cardTitleTextBlock" Text="Card Title" FontWeight="Bold" />
            <TextBlock Name="cardTextTextBlock" Text="Card Text" TextWrapping="Wrap" />
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="drawCardButton" Content="Draw Card" Click="DrawCardButton_Click" Margin="10" />
            <Button Name="showDiscardPileButton" Content="Show Discard Pile" Click="ShowDiscardPileButton_Click" Margin="10" />
            <Button Name="showDrawPileButton" Content="Show Draw Pile" Click="ShowDrawPileButton_Click" Margin="10" />
        </StackPanel>

        <!-- Capabilities Display -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin="10">
            <TextBlock Text="British Capabilities" FontWeight="Bold" />
            <TextBox Name="britishCapabilitiesTextBox" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Height="100" />
            <TextBlock Text="Irgun Capabilities" FontWeight="Bold" Margin="10,10,0,0"/>
            <TextBox Name="irgunCapabilitiesTextBox" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Height="100" />
            <TextBlock Text="Game Status" FontWeight="Bold" Margin="10,10,0,0"/>
            <TextBlock Name="initiativeTextBlock" Text="Initiative: Irgun" />
            <TextBlock Name="politicalWillTextBlock" Text="Political Will: 18" />
            <TextBlock Name="haganahTrackTextBlock" Text="Haganah Track: 4" />
        </StackPanel>
    </Grid>
</Window>
